						span.header__top-dropdown-time 2 hours ago
					.dropdown-notification__icon.dropdown-notification__icon--color-pink
						+icon('bubble')
			li.header__top-dropdown-item
				a(href="#").header__top-dropdown-link
					.header__top-dropdown-userpic
						img(src="static/images/common/avatar-4.png" alt="").header__top-dropdown-userpic-image
